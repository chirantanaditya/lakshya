---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header';
import Footer from '../components/Footer';
import { getSession } from '../lib/session';

const session = await getSession(Astro.cookies);
---

<BaseLayout 
  title="For Corporates | Lakshya Counselling"
  description="Career counselling services for corporate professionals and organizations."
>
  <Header client:load session={session} />
  
  <main class="min-h-screen py-12">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        <h1 class="text-4xl font-bold text-gray-900 mb-6">For Corporates</h1>
        
        <div class="prose max-w-none">
          <p class="text-xl text-gray-700 mb-8">
            Through our guidance, professionals are empowered to make informed decisions about their career paths, 
            aligning their skills with future aspirations and organizational goals.
          </p>

          <h2 class="text-2xl font-semibold text-gray-900 mt-8 mb-4">Our Services for Corporates</h2>
          
          <div class="grid md:grid-cols-2 gap-6 my-8">
            <div class="bg-white rounded-lg shadow p-6">
              <h3 class="text-xl font-semibold text-gray-900 mb-3">Career Transition Support</h3>
              <p class="text-gray-600">
                Help your employees navigate career changes, role transitions, and skill development opportunities.
              </p>
            </div>
            
            <div class="bg-white rounded-lg shadow p-6">
              <h3 class="text-xl font-semibold text-gray-900 mb-3">Team Assessments</h3>
              <p class="text-gray-600">
                Comprehensive assessments to understand team dynamics, strengths, and areas for development.
              </p>
            </div>
            
            <div class="bg-white rounded-lg shadow p-6">
              <h3 class="text-xl font-semibold text-gray-900 mb-3">Leadership Development</h3>
              <p class="text-gray-600">
                Identify and develop leadership potential within your organization through personalized counselling.
              </p>
            </div>
            
            <div class="bg-white rounded-lg shadow p-6">
              <h3 class="text-xl font-semibold text-gray-900 mb-3">Employee Retention</h3>
              <p class="text-gray-600">
                Support employees in finding fulfillment in their current roles and career growth paths.
              </p>
            </div>
          </div>

          <div class="mt-8 bg-primary-50 rounded-lg p-6">
            <h3 class="text-xl font-semibold text-gray-900 mb-4">Get Started</h3>
            <p class="text-gray-700 mb-4">
              Contact us to discuss how we can help your organization support employee career development.
            </p>
            <a 
              href="/contact-us" 
              class="inline-block px-6 py-3 bg-primary-600 text-white rounded-lg hover:bg-primary-700 transition-colors font-medium"
            >
              Contact Us
            </a>
          </div>
        </div>
      </div>
    </div>
  </main>
  
  <Footer client:load />
</BaseLayout>


