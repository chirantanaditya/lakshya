---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header';
import Footer from '../components/Footer';
import UserProfileForm from '../components/UserProfileForm';
import { getSession } from '../lib/session';
import { getUserById } from '../lib/auth';

const session = await getSession(Astro.cookies);

if (!session) {
  return Astro.redirect('/login');
}

const user = await getUserById(session.userId);
---

<BaseLayout title="My Account | Lakshya Counselling">
  <Header client:load session={session} />
  
  <main class="min-h-screen py-12 bg-gray-50">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        <h1 class="text-3xl font-bold text-gray-900 mb-8">My Account</h1>
        
        <div class="bg-white rounded-lg shadow p-8">
          <h2 class="text-xl font-semibold text-gray-900 mb-6">Profile Information</h2>
          <UserProfileForm client:load user={user} />
        </div>
      </div>
    </div>
  </main>
  
  <Footer client:load />
</BaseLayout>


