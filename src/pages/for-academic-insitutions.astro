---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header';
import Footer from '../components/Footer';
import { getSession } from '../lib/session';

const session = await getSession(Astro.cookies);
---

<BaseLayout 
  title="For Academic Institutions | Lakshya Counselling"
  description="Career counselling services for schools, colleges, and educational institutions."
>
  <Header client:load session={session} />
  
  <main class="min-h-screen py-12">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        <h1 class="text-4xl font-bold text-gray-900 mb-6">For Academic Institutions</h1>
        
        <div class="prose max-w-none">
          <p class="text-xl text-gray-700 mb-8">
            Through our guidance, students are empowered to make informed decisions about their higher studies 
            and specialization paths, aligning their education with future aspirations.
          </p>

          <h2 class="text-2xl font-semibold text-gray-900 mt-8 mb-4">Our Services for Institutions</h2>
          
          <div class="grid md:grid-cols-2 gap-6 my-8">
            <div class="bg-white rounded-lg shadow p-6">
              <h3 class="text-xl font-semibold text-gray-900 mb-3">Student Career Counselling</h3>
              <p class="text-gray-600">
                Comprehensive career guidance for students at all levels - from high school to college.
              </p>
            </div>
            
            <div class="bg-white rounded-lg shadow p-6">
              <h3 class="text-xl font-semibold text-gray-900 mb-3">Stream Selection Support</h3>
              <p class="text-gray-600">
                Help students choose the right academic streams based on their interests and aptitudes.
              </p>
            </div>
            
            <div class="bg-white rounded-lg shadow p-6">
              <h3 class="text-xl font-semibold text-gray-900 mb-3">College & Course Selection</h3>
              <p class="text-gray-600">
                Guide students in selecting the right colleges and courses for their career goals.
              </p>
            </div>
            
            <div class="bg-white rounded-lg shadow p-6">
              <h3 class="text-xl font-semibold text-gray-900 mb-3">Bulk Assessment Programs</h3>
              <p class="text-gray-600">
                Conduct assessments for entire classes or batches to understand student potential.
              </p>
            </div>
          </div>

          <div class="mt-8 bg-primary-50 rounded-lg p-6">
            <h3 class="text-xl font-semibold text-gray-900 mb-4">Partner With Us</h3>
            <p class="text-gray-700 mb-4">
              Contact us to discuss how we can support your institution's career counselling needs.
            </p>
            <a 
              href="/contact-us" 
              class="inline-block px-6 py-3 bg-primary-600 text-white rounded-lg hover:bg-primary-700 transition-colors font-medium"
            >
              Contact Us
            </a>
          </div>
        </div>
      </div>
    </div>
  </main>
  
  <Footer client:load />
</BaseLayout>


