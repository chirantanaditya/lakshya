---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header';
import Footer from '../components/Footer';
import LoginForm from '../components/LoginForm';
import { getSession } from '../lib/session';

const session = await getSession(Astro.cookies);
---

<BaseLayout title="Login to Lakshya Counselling">
  <Header client:load session={session} />
  
  <main class="min-h-screen py-12">
    <div class="container mx-auto px-4">
      <div class="max-w-md mx-auto bg-white rounded-lg shadow-lg p-8">
        <h1 class="text-3xl font-bold text-center text-gray-900 mb-8">Login</h1>
        <LoginForm client:load />
        <div class="mt-6 text-center text-sm text-gray-600">
          <p>
            Don't have an account? <a href="/register" class="text-primary-600 hover:underline">Register here</a>
          </p>
          <p class="mt-2">
            <a href="/reset-password" class="text-primary-600 hover:underline">Forgot password?</a>
          </p>
        </div>
      </div>
    </div>
  </main>
  
  <Footer client:load />
</BaseLayout>

