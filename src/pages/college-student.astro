---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header';
import Footer from '../components/Footer';
import { getSession } from '../lib/session';

const session = await getSession(Astro.cookies);
---

<BaseLayout 
  title="College Students | Lakshya Counselling"
  description="Career counselling for college students exploring future options."
>
  <Header client:load session={session} />
  
  <main class="min-h-screen py-12">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        <h1 class="text-4xl font-bold text-gray-900 mb-6">For College Students</h1>
        
        <div class="prose max-w-none">
          <p class="text-xl text-gray-700 mb-8">
            Students exploring their future studying options who are unclear and muddled 
            by the number of possibilities available.
          </p>

          <h2 class="text-2xl font-semibold text-gray-900 mt-8 mb-4">How We Help College Students</h2>
          
          <div class="space-y-6 my-8">
            <div class="bg-white rounded-lg shadow p-6">
              <h3 class="text-xl font-semibold text-gray-900 mb-3">Higher Education Guidance</h3>
              <p class="text-gray-600">
                Get clarity on postgraduate programs, specializations, and advanced degrees that align with your goals.
              </p>
            </div>
            
            <div class="bg-white rounded-lg shadow p-6">
              <h3 class="text-xl font-semibold text-gray-900 mb-3">Career Path Clarity</h3>
              <p class="text-gray-600">
                Understand how your current studies connect to future career opportunities and industries.
              </p>
            </div>
            
            <div class="bg-white rounded-lg shadow p-6">
              <h3 class="text-xl font-semibold text-gray-900 mb-3">Skill Development</h3>
              <p class="text-gray-600">
                Identify skills you need to develop and opportunities to enhance your employability.
              </p>
            </div>
          </div>

          <div class="mt-8 bg-primary-50 rounded-lg p-6">
            <h3 class="text-xl font-semibold text-gray-900 mb-4">Start Your Journey</h3>
            <p class="text-gray-700 mb-4">
              Get personalized guidance to navigate your career options and make informed decisions.
            </p>
            <div class="flex gap-4">
              <a 
                href="/register" 
                class="px-6 py-3 bg-primary-600 text-white rounded-lg hover:bg-primary-700 transition-colors font-medium"
              >
                Register Now
              </a>
              <a 
                href="https://tidycal.com/suresh1/about-lakshya-counselling" 
                class="px-6 py-3 bg-white text-primary-600 border-2 border-primary-600 rounded-lg hover:bg-primary-50 transition-colors font-medium"
              >
                Book Consultation
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>
  
  <Footer client:load />
</BaseLayout>

