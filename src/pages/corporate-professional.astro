---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header';
import Footer from '../components/Footer';
import { getSession } from '../lib/session';

const session = await getSession(Astro.cookies);
---

<BaseLayout 
  title="Corporate Professional | Lakshya Counselling"
  description="Career counselling for corporate professionals seeking career growth."
>
  <Header client:load session={session} />
  
  <main class="min-h-screen py-12">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        <h1 class="text-4xl font-bold text-gray-900 mb-6">For Corporate Professionals</h1>
        
        <div class="prose max-w-none">
          <p class="text-xl text-gray-700 mb-8">
            Corporate professionals who are in search of a role that best suits their acquired skills 
            and an environment that complements their desires.
          </p>

          <h2 class="text-2xl font-semibold text-gray-900 mt-8 mb-4">Career Development Services</h2>
          
          <div class="space-y-6 my-8">
            <div class="bg-white rounded-lg shadow p-6">
              <h3 class="text-xl font-semibold text-gray-900 mb-3">Career Transition Support</h3>
              <p class="text-gray-600">
                Navigate career changes, role transitions, and industry shifts with confidence and clarity.
              </p>
            </div>
            
            <div class="bg-white rounded-lg shadow p-6">
              <h3 class="text-xl font-semibold text-gray-900 mb-3">Skill Alignment</h3>
              <p class="text-gray-600">
                Identify roles and opportunities that match your skills, values, and career aspirations.
              </p>
            </div>
            
            <div class="bg-white rounded-lg shadow p-6">
              <h3 class="text-xl font-semibold text-gray-900 mb-3">Work-Life Balance</h3>
              <p class="text-gray-600">
                Find career paths that align with your personal values and desired lifestyle.
              </p>
            </div>
          </div>

          <div class="mt-8 bg-primary-50 rounded-lg p-6">
            <h3 class="text-xl font-semibold text-gray-900 mb-4">Take the Next Step</h3>
            <p class="text-gray-700 mb-4">
              Get professional guidance to advance your career and find fulfillment in your work.
            </p>
            <div class="flex gap-4">
              <a 
                href="/register" 
                class="px-6 py-3 bg-primary-600 text-white rounded-lg hover:bg-primary-700 transition-colors font-medium"
              >
                Register Now
              </a>
              <a 
                href="https://tidycal.com/suresh1/about-lakshya-counselling" 
                class="px-6 py-3 bg-white text-primary-600 border-2 border-primary-600 rounded-lg hover:bg-primary-50 transition-colors font-medium"
              >
                Book Consultation
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>
  
  <Footer client:load />
</BaseLayout>


